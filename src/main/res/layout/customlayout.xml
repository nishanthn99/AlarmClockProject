<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="15dp"
        android:background="#0C7DD8"
        android:backgroundTint="#546BED"
        app:cardCornerRadius="18dp"
        app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:textSize="28dp"
                android:gravity="center"
                android:id="@+id/hour"></TextView>
            <TextView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:textSize="28dp"
                android:gravity="center"
                android:id="@+id/minute"></TextView>
            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:textSize="20dp"
                android:gravity="center"
                android:id="@+id/zone"></TextView>


        </LinearLayout>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_gravity="bottom"
            android:saveEnabled="true"
            android:clickable="true"
            android:contextClickable="true"
            android:soundEffectsEnabled="true"
            android:padding="16dp"></Spinner>

        <Switch
            android:id="@+id/toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="250dp"
            android:minHeight="48dp"
            android:showText="true"
            android:textOff="OFF"
            android:textOn="ON"
            android:checked="true"
            android:thumb="@drawable/onswich"
            android:track="@drawable/offswich"></Switch>
    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>